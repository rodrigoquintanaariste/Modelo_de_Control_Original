<configuration>

    <property name="SDH_CORE_FILE_CONVERTER_LOG" value="logs/app.log"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="sdh.core.file.converter" level="OFF" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>